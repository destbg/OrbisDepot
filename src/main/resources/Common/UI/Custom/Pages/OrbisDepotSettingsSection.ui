$C = "../Common.ui";

Group {
  LayoutMode: Top;

  Group {
    Anchor: (Height: 8);
  }

  Group {
    Padding: (Left: 12, Right: 12);
    LayoutMode: Top;

    $C.@CheckBoxWithLabel #AutoPlaceToggle {
      @Text = "Auto-replenish from Depot";
      @Checked = true;
    }

    Group {
      Anchor: (Height: 6);
    }

    $C.@CheckBoxWithLabel #CraftingToggle {
      @Text = "Crafting integration";
      @Checked = true;
    }

    Group {
      Anchor: (Height: 6);
    }

    $C.@CheckBoxWithLabel #ThrottleUiToggle {
      @Text = "Throttle UI updates (1/s)";
      @Checked = false;
    }
  }
}
